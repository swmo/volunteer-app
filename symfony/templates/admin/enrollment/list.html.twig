{% extends 'admin/base.html.twig' %}

{% block title %} Anmeldungen {% endblock %}

{% block main %}

<div class="w-full mx-auto">
  <div class="bg-white shadow-md rounded my-6">
    <table class="text-left w-full border-collapse">
      <thead>
        <tr>
          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Vorname</th>
          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Nachname</th>
          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">E-Mail</th>
          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Mobile</th>

          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Einsatz</th>
          <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">
          </th>
        </tr>
      </thead>
      <tbody>

          {% for enrollment in enrollments %}
        <tr class="hover:bg-grey-lighter">
          <td class="py-4 px-6 border-b border-grey-light">
            {{ enrollment.firstname }}
        </td>
          <td class="py-4 px-6 border-b border-grey-light">
            {{ enrollment.lastname }}
          </td>
          <td class="py-4 px-6 border-b border-grey-light">
            {{ enrollment.email }}
          </td>
          <td class="py-4 px-6 border-b border-grey-light">
            {{ enrollment.mobile }}
          </td>
          <td class="py-4 px-6 border-b border-grey-light">

            {% if enrollment.missionChoice01 %}
              {{ enrollment.missionChoice01.name }} <br>
            {% endif %}
            {% if enrollment.missionChoice02 %}
              {{ enrollment.missionChoice02.name }} <br>
            {% endif %}
            
            {{enrollment.getWorkingTime|date('%h:%i')}}
          </td>
          <td class="py-4 px-6 border-b text-right border-grey-light">
            <a href="{{ path('admin_enrollment_edit',{id: enrollment.id})}}" class="text-grey-lighter font-bold py-1 px-3 rounded text-xs bg-green hover:bg-green-dark">Edit</a>
          </td>
          
          </tr>
    {% endfor %}

          </tbody>
          </table>
          </div>
          </div>

{% endblock %}
